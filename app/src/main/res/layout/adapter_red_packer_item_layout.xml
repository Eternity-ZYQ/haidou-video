<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    app:bl_corners_radius="@dimen/dp_10"
    app:bl_solid_color="@color/white">

    <TextView
        android:id="@+id/tv_rp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_share"
        tools:text="红包标题"/>


    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_5"
        android:contentDescription="TODO" android:padding="10dp"
        android:visibility="gone"
        android:src="@mipmap/ico_share"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_rp"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_60"
        android:layout_margin="@dimen/dp_15"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        android:src="@color/c_cccccc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rp_title"/>

    <TextView
        android:id="@+id/tv_rp_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@id/iv_rp"
        app:layout_constraintLeft_toRightOf="@id/iv_rp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/iv_rp"
        tools:text="红包内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>

    <View
        android:id="@+id/line"
        style="@style/lineStyle"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_rp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:text="欢乐抢红包"/>

    <TextView
        android:id="@+id/tv_rp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:text="2019-08-30 17:25:54"/>



</com.noober.background.view.BLConstraintLayout>