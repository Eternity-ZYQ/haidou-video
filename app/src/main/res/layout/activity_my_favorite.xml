<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xj_background"
    tools:context=".mine.MyFavoriteActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xj_background"
        app:titleTextColor="@color/white"
        app:leftIcon="@mipmap/icon_left_white"
        app:title="我的收藏"/>


    <com.yimeng.widget.NavMyFavoriteView
        android:id="@+id/title_order"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>