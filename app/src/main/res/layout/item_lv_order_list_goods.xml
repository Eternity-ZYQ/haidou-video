<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/click_rl"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/sdv_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:contentDescription="TODO" tools:ignore="RtlHardcoded" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/sdv_image"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text="无限充电宝" />


            <TextView
                android:id="@+id/tv_goods_parameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:textSize="12sp"
                android:textColor="@color/c_999999"
                tools:text="白色 | 1000amh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:ignore="ObsoleteLayoutParam" />

                <TextView
                    android:id="@+id/tv_cost_beans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="ObsoleteLayoutParam"
                    tools:text="199" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/c_999999"
                android:textSize="12sp"
                tools:text="x1" />

        </RelativeLayout>

    </RelativeLayout>

    <View style="@style/lineStyle"/>

</LinearLayout>