<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".mine.RedPackerResidueActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_rp_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/c_333333"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"/>

    <TextView
        android:id="@+id/tv_rp_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_money"
        android:layout_marginTop="@dimen/dp_30"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="￥0.01"/>

    <TextView
        android:id="@+id/tv_rp_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:textSize="12sp"
        tools:text="新用户可领X个，x元/个；老用户可领X个，X元/个"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:textSize="12sp"
        tools:text="2019-08-28 17:16:49"/>

    <TextView
        android:id="@+id/tv_rp_residue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        tools:text="新用户已领取0/10, 共0/10"/>

    <TextView
        android:id="@+id/tv_rp_old_residue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:visibility="gone"
        android:textSize="14sp"
        tools:text="老用户已领取0/10, 共0/10"/>

    <View style="@style/lineStyle"
          android:layout_marginTop="@dimen/dp_10"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/adapter_red_packer_residue_item"
        android:layout_weight="1"/>

</LinearLayout>