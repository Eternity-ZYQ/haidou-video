<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:bl_corners_radius="10dp"
	android:layout_margin="5dp"
	app:bl_solid_color="@color/xj_btn_bg">

	<com.noober.background.view.BLImageView
		android:id="@+id/iv_product_logo"
		android:layout_width="match_parent"
		android:layout_height="200dp"
		app:bl_corners_topLeftRadius="10dp"
		app:bl_corners_topRightRadius="10dp"
		app:bl_solid_color="@color/c_cccccc"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_product_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:text="￥0.00"
		android:layout_marginTop="5dp"
		android:textColor="@color/theme_color"
		app:layout_constraintStart_toStartOf="@id/iv_product_logo"
		app:layout_constraintTop_toBottomOf="@id/iv_product_logo" />

	<TextView
		android:id="@+id/tv_product_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="灵芝鸡蛋"
		android:layout_marginTop="5dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="10dp"
		android:textColor="@color/theme_color"
		app:layout_constraintStart_toStartOf="@id/tv_product_price"
		app:layout_constraintTop_toBottomOf="@id/tv_product_price" />

	<TextView
		android:id="@+id/tv_product_pay"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/white"
		app:layout_constraintBottom_toBottomOf="@id/tv_product_name"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="10dp"
		android:text="已售 10"/>

</com.noober.background.view.BLConstraintLayout>