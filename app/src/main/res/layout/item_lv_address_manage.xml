<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_white_radius_10"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="张三丰"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:textSize="14dp"
                tools:ignore="RtlHardcoded"
                tools:text="18900011111"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="14dp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
            tools:text="广东 深圳 宝安区 a防守打法所发生的发射点发萨斯范德萨分防守打法所发生的发射点发萨斯范德萨分"/>

        <View style="@style/lineStyle"
            android:layout_marginTop="@dimen/dp_5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:id="@+id/checkLL"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/checkSDV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:background="@mipmap/kd_round" android:contentDescription="TODO"/>

                <TextView
                    android:id="@+id/tv_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="默认地址"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap.Horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                tools:ignore="RtlHardcoded">

                <TextView
                    android:id="@+id/editClickTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_bg_wihte_stroke_color_t3_28"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:text="编辑"
                    android:textColor="@color/c_666666"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/delectClickTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btn_bg_wihte_stroke_color_red_28"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:text="删除"
                    android:textColor="@color/c_666666"
                    android:textSize="14dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
