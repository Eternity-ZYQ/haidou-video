<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_cccccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_line"
            android:layout_marginRight="@dimen/dp_line"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_line"
        android:layout_marginTop="@dimen/dp_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_line"
            android:layout_marginRight="@dimen/dp_line"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_line"
            android:layout_marginRight="@dimen/dp_line"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_key_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_line"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="#e1e2ea"/>

        <TextView
            android:id="@+id/tv_key_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_line"
            android:layout_marginRight="@dimen/dp_line"
            android:layout_weight="1"
            android:background="@drawable/white_ripple"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/tv_key_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:background="#e1e2ea"
            android:contentDescription="TODO" android:gravity="center"
            android:padding="8dp"
            android:src="@mipmap/ic_delete"
            android:textColor="@color/c_333333"
            android:textSize="16sp"
            android:tint="#686868"/>
    </LinearLayout>


</LinearLayout>