<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xj_background"
    tools:context=".mine.UpdatePwdActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        app:title="修改密码"
        app:rightContent="修改"
        android:background="@color/xj_background"
        app:leftIcon="@mipmap/icon_left_white"
        app:titleTextColor="@color/white"
        app:rightTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.yimeng.widget.InputItemLayout
        android:id="@+id/input_old_pwd"
        android:text="原密码"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.yimeng.widget.InputItemLayout
        android:id="@+id/input_new_pwd"
        android:text="新密码"
        android:hint="请输入新密码(6到18位字母或数字)"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.yimeng.widget.InputItemLayout
        android:id="@+id/input_new_pwd2"
        android:text="确认密码"
        android:hint="请确认新密码(6到18位字母或数字)"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>