<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xj_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/clickRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sdv_image"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            tools:background="#FF424242"
            android:contentDescription="TODO" tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toRightOf="@+id/sdv_image"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxLines="3"
            tools:ignore="RtlHardcoded"
            tools:text="手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝手机充电宝" />

        <TextView
            android:id="@+id/goodsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goodsName"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/sdv_image"
            android:textColor="@color/c_999999"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded"
            tools:text="白色 | 1000maH" />

        <LinearLayout
            style="@style/WrapWrap.Horizontal"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/goodsDesc"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@+id/sdv_image"
            android:layout_toEndOf="@+id/sdv_image">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/c_money"
                android:textSize="10sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_money"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded"
                tools:text="100" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="18dp"
            android:textColor="@color/c_999999"
            android:textSize="12sp"
            tools:ignore="RtlHardcoded"
            tools:text="x1" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>