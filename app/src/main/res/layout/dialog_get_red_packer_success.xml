<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/dp_200"
        android:contentDescription="TODO" android:src="@mipmap/icon_red_packer_success"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_height="@dimen/dp_250"/>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_30"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_bg"
        android:contentDescription="TODO" android:src="@mipmap/ico_close"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:text="抢到0元"
        app:layout_constraintTop_toTopOf="@id/iv_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        android:layout_marginTop="@dimen/dp_35"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>

    <com.noober.background.view.BLButton
        android:layout_width="0dp"
        android:id="@+id/btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_bg"
        app:layout_constraintRight_toRightOf="@id/iv_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:bl_solid_color="#ffce2e"
        android:padding="0dp"
        android:textSize="12sp"
        app:bl_corners_radius="@dimen/dp_5"
        android:textColor="#ed2422"
        android:text="去使用"
        android:layout_height="@dimen/dp_35"/>

</android.support.constraint.ConstraintLayout>