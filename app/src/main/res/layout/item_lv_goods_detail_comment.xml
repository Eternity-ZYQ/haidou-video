<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/xj_background"
              android:orientation="vertical"
              android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        tools:ignore="UselessParent">

        <com.huige.library.widget.CircleImageView
            android:id="@+id/avatarSDV"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/avatarSDV"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded"
            tools:text="传奇" />

        <com.yimeng.widget.RatingStat.RatingStarView
            android:id="@+id/rating_score"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            app:rsv_cornerRadius="4dp"
            android:layout_marginLeft="@dimen/dp_15"
            app:drawStrokeForEmptyStar="false"
            app:drawStrokeForHalfStar="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nameTV"
            app:enableSelectRating="false"
            app:rating="1"
            app:starBackgroundColor="#d6d6d6"
            app:starForegroundColor="#fed03c"
            app:starMargin="3dp"
            app:starThickness="0.7"
            app:strokeColor="#457DD7"
            app:rsv_strokeWidth="1px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/describeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded"
        tools:text="两千八就能买个iPhone10，真的，这竟然是真的真的 太让人无法相信了，太神奇了，真的让我太不可思议" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/image1SDV"
            android:layout_width="88dp" android:contentDescription="TODO" 
            android:layout_height="88dp"/>

        <ImageView
            android:id="@+id/image2SDV"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="TODO" tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/image3SDV"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="TODO" tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/dp_10"
        tools:ignore="RtlHardcoded"
        tools:text="2018-5-09" />
</LinearLayout>
