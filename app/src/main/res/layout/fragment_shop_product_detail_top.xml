<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xj_background"
    android:orientation="vertical">


    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/sib_mall_banner"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:banner_pointDrawable="@drawable/shape_dot"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="婴儿睡袋秋冬款防踢被儿童加厚纯棉宝宝秋冬季四季通用被子"/>

    <TextView
        android:id="@+id/tv_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/c_999999"
        android:textSize="12sp"
        tools:text="婴儿睡袋秋冬款防踢被儿童加厚纯棉宝宝秋冬季四季通用被子"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_15"
            android:textColor="@color/c_money"
            android:textSize="16sp"
            tools:text="¥99.9"/>

        <!--增减数量-->
        <LinearLayout
            android:id="@+id/layout_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_product_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="TODO" android:src="@mipmap/shangjia_shuliangjian"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/shape_theme_radius_20"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:text="1"
                android:textColor="@color/c_333333"
                android:textSize="16sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_product_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:contentDescription="TODO" android:src="@mipmap/shangjia_shuliangjia"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sale_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_money"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="本商品为促销商品，如库存售罄请协商替换为其它商品，不支持退款退货，请知悉!"/>

    <TextView
        android:id="@+id/tv_product_feeMode_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        tools:text="仅支持到店消费"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textColor="@color/c_999999"/>

    <View style="@style/lineStyle10"/>

    <RelativeLayout
        android:id="@+id/rl_select_specifications"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/tv_selected"
            android:textColor="@color/c_999999"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="7dp" android:contentDescription="TODO" 
            android:id="@+id/sdv_goto"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@mipmap/right_arrow"/>

        <TextView
            android:id="@+id/tv_my_wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@id/sdv_goto"
            android:layout_toRightOf="@id/tv_selected"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/tv_goods_detail_parameter"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View style="@style/lineStyle"/>

    <TextView
        android:id="@+id/tv_after_sale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableRight="@mipmap/right_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="售后服务"/>

    <View style="@style/lineStyle"/>

    <TextView
        android:id="@+id/tv_product_parameter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableRight="@mipmap/right_arrow"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="产品参数"/>

    <View style="@style/lineStyle10"/>

</LinearLayout>