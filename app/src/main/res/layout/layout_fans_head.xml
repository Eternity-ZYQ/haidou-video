<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/xj_btn_bg"
		android:orientation="vertical">


		<TextView
			android:id="@+id/tv_directCount"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:gravity="center_vertical"
			android:paddingStart="10dp"
			android:text="直接分享"
			android:textSize="16sp"
			android:textColor="@color/theme_color" />

		<View style="@style/lineStyle" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_directActiveCount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="有效用户"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_directGrade1"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="金星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_directGrade2"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="木星"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_directGrade3"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="水星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_directGrade4"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="火星"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_directGrade5"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="土星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_directTotalAmount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="总团队业绩"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_directTodayAmount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="今日团队任务"
				android:textColor="@color/theme_color" />
		</LinearLayout>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:background="@color/xj_btn_bg"
		android:orientation="vertical">


		<TextView
			android:id="@+id/tv_teamCount"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:gravity="center_vertical"
			android:paddingStart="10dp"
			android:textSize="16sp"
			android:text="粉丝分享"
			android:textColor="@color/theme_color" />

		<View style="@style/lineStyle" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_teamActiveCount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="有效用户"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_teamGrade1"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="金星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_teamGrade2"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="木星"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_teamGrade3"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="水星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_teamGrade4"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="火星"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_teamGrade5"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="土星"
				android:textColor="@color/theme_color" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_teamTotalAmount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:paddingStart="10dp"
				android:text="总团队业绩"
				android:textColor="@color/theme_color" />

			<TextView
				android:id="@+id/tv_teamTodayAmount"
				android:layout_width="0dp"
				android:layout_height="40dp"
				android:layout_weight="1"
				android:gravity="start|center_vertical"
				android:text="今日团队任务"
				android:textColor="@color/theme_color" />
		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="@color/xj_btn_bg"
		android:gravity="center_vertical"
		android:paddingStart="10dp"
		android:layout_marginTop="10dp"
		android:text="直接分享用户"
		android:textSize="16sp"
		android:textColor="@color/theme_color" />

</LinearLayout>