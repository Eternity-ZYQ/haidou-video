<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_seed_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="买入价:"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_seed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="有效期："
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_seed_price"
        app:layout_constraintTop_toBottomOf="@id/tv_seed_price"/>


    <com.noober.background.view.BLButton
        android:id="@+id/btn_send"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_10"
        android:padding="0dp"
        android:text="转赠"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_shape="rectangle"
        android:layout_marginTop="@dimen/dp_10"
        app:bl_solid_color="@color/theme_color"
        app:layout_constraintBottom_toTopOf="@+id/btn_sell"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.noober.background.view.BLButton
        android:id="@+id/btn_sell"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:padding="0dp"
        android:text="出售"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_shape="rectangle"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        app:bl_solid_color="@color/theme_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/btn_send"
        app:layout_constraintTop_toBottomOf="@id/btn_send"/>


    <View
        style="@style/lineStyle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>