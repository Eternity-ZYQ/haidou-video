<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xj_background"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/tv_type_enclosure"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="附近商家"
            android:layout_margin="@dimen/dp_10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/iv_more_shop"
            android:layout_width="wrap_content"
            android:text="更多"
            android:textColor="@color/c_999999"
            android:textSize="13sp"
            android:drawableRight="@mipmap/right_arrow"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/tv_type_enclosure"
            app:layout_constraintBottom_toBottomOf="@+id/tv_type_enclosure"
            android:drawablePadding="@dimen/dp_10"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_shop"
            app:layout_constraintTop_toBottomOf="@id/iv_more_shop"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>