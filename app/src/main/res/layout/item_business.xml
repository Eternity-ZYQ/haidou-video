<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/clickRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/targetIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:contentDescription="TODO" android:src="@color/c_cccccc"
            tools:ignore="RtlHardcoded"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/targetIV"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/targetTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/c_333333"
                android:textSize="14sp"
                android:maxWidth="80dp"
                tools:ignore="RtlHardcoded"
                tools:text="王总王总王总王总王总王总王总王总王总王总王总王总"/>

            <TextView
                android:id="@+id/phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/c_999999"
                android:textSize="12sp"
                tools:text="(18888888888)"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/cashTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fe3c3c"
                android:textSize="14sp"
                tools:text="￥200"/>

        </LinearLayout>


        <TextView
            android:id="@+id/typeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/targetIV"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/targetIV"
            android:maxLength="10"
            android:textColor="@color/c_999999"
            android:textSize="14sp"
            tools:text="iphone600000000000007770"/>


        <TextView
            android:id="@+id/timeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/targetIV"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/c_999999"
            android:textSize="12sp"
            tools:text="2018-02-19  12:59"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5"/>
</RelativeLayout>