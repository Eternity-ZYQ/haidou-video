<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2.5dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="match_parent" android:contentDescription="TODO" 
        android:layout_height="@dimen/dp_200"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_radius"
        android:paddingBottom="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:lines="1"
            android:ellipsize="end"
            tools:text="A货佛爱过后A货佛爱过后啊A货佛爱过后啊A货佛爱过后啊A货佛爱过后啊A货佛爱过后啊A货佛爱过后啊啊"
            android:textColor="@color/c_333333"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_deal_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="2315人付款"
            android:textColor="@color/c_999999"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            tools:text="¥12312"
            android:textColor="@color/theme_color"
            android:textSize="10sp"/>
    </LinearLayout>


</LinearLayout>