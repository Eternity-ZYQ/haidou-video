<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.huige.library.widget.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dp_20"
        android:src="@color/c_333333"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        tools:text="雷布斯"
        android:textSize="16sp"
        android:textColor="@color/c_333333"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_user_mobile"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_user_mobile"
        android:layout_width="wrap_content"
        tools:text="150 0000 0000"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintBottom_toTopOf="@id/tv_time"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        tools:text="2019-1-1 11:11:11"
        android:textSize="14sp"
        android:textColor="@color/c_333333"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/tv_user_mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_user_proxy"
        android:layout_width="wrap_content"
        android:text="城市服务商"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="16sp"
        android:textColor="@color/c_333333"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_user_grade"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_user_grade"
        android:layout_width="wrap_content"
        tools:text="黄牛"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:layout_marginStart="@dimen/dp_20"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/tv_shop_name"
        app:layout_constraintTop_toBottomOf="@id/tv_user_proxy"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        tools:text="雷布斯旗舰店"
        android:textSize="14sp"
        android:layout_marginRight="@dimen/dp_10"
        android:textColor="@color/c_333333"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/tv_user_mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_settlement"
        android:layout_width="wrap_content"
        android:contentDescription="TODO" android:src="@mipmap/ico_settlement_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>


    <View style="@style/lineStyle"
          app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>