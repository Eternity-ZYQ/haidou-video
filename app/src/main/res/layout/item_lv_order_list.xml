<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xj_background"
    android:orientation="vertical">

    <View style="@style/lineStyle10"
        android:background="@color/c_f5f5f5"/>
    <View style="@style/lineStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yimeng.widget.ExpandListView
            android:id="@+id/lv_mall_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View style="@style/lineStyle"
            android:background="@color/c_f5f5f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_999999"
                android:textSize="14sp"
                android:text="实付: "/>

            <TextView
                android:id="@+id/tv_sum_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textSize="14sp"
                android:text="¥2311"/>

            <TextView
                android:id="@+id/tv_price_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333333"
                android:textSize="14sp"
                android:visibility="gone"
                android:text="返123元"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/xj_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <!--取消订单按钮-->
                <TextView
                    android:id="@+id/tv_cancel_order"
                    android:layout_width="81dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_rect_radius_20"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="@string/tv_cancel_order"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!--退款进度-->
                <TextView
                    android:id="@+id/tv_return_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:background="@drawable/shape_rect_radius_20"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="查看退款进度"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!--申请退货-->
                <TextView
                    android:id="@+id/tv_return_of_goods"
                    android:layout_width="84dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rect_radius_20"
                    android:gravity="center"
                    android:text="申请退货"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <!--查看物流-->
                <TextView
                    android:id="@+id/tv_look_logistics"
                    android:layout_width="84dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rect_radius_20"
                    android:gravity="center"
                    android:text="查看物流"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!--确认收货按钮-->
                <TextView
                    android:id="@+id/tv_confirm_goods"
                    android:layout_width="84dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    style="@style/btnThemeStyle"
                    android:textColor="@color/white"
                    android:text="确认收货"
                    android:visibility="gone" />

                <!--评价按钮-->
                <TextView
                    android:id="@+id/tv_evaluation"
                    android:layout_width="81dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:text="评价"
                    android:textColor="@color/white"
                    style="@style/btnThemeStyle"
                    android:visibility="visible" />

                <!--查看详情按钮-->
                <TextView
                    android:id="@+id/tv_check_detail"
                    android:layout_width="81dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rect_radius_20"
                    android:layout_marginTop="15dp"
                    android:text="查看详情" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>