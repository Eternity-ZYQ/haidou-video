<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/layout_address"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" android:src="@mipmap/ico_delivery_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_address"
        android:layout_margin="@dimen/dp_20"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_address"
        android:layout_margin="@dimen/dp_10"
        tools:text="收货人："/>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name"
        tools:ignore="RtlHardcoded"
        tools:text="18900011111"/>


    <TextView
        android:id="@+id/tv_district"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/c_666666"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintLeft_toRightOf="@id/iv_address"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
        tools:text="收货地址：北京市海定区五环到六环之间一圈汇35号1号公寓2层217"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="TODO" android:src="@mipmap/icon_address_bottom"/>

</android.support.constraint.ConstraintLayout>