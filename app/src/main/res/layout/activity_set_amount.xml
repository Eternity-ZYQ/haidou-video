<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f5f5f5"
    tools:context=".shop.collection.SetAmountActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AAF5F5F5"
        app:title="@string/str_set_amount"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_25"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="收款金额"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_15"
            />

        <EditText
            android:id="@+id/edMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:drawableLeft="@drawable/ic_money"
            android:background="@null"
            android:maxLength="10"
            android:maxLines="1"
            android:textColor="#000000"
            android:inputType="numberDecimal"
            android:textSize="@dimen/sp_30"
            />

        <View
            android:id="@+id/vDividing"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/c_cccccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!--登录按钮-->
        <Button
            android:id="@+id/btDetermine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_theme_radius_5"
            android:textColor="@color/select_login_text_color"
            android:text="@string/btn_determine"
            android:layout_marginBottom="@dimen/dp_25"
            android:textSize="18sp"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>