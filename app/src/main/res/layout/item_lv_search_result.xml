<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/click_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="16dp"
        tools:ignore="RtlHardcoded,UselessParent">

        <ImageView
            android:id="@+id/sdv_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:contentDescription="TODO" android:src="@color/c_cccccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_bean_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#FE3C3C"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@id/sdv_image"
            app:layout_constraintLeft_toRightOf="@id/sdv_image"
            tools:ignore="RtlHardcoded"
            tools:text="199"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dp_20"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/sdv_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/sdv_image"
            tools:text="超级手机壳"/>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:textColor="@color/c_999999"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/sdv_image"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="麻麻直营"/>

        <TextView
            android:id="@+id/tv_send_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:lines="1"
            android:textColor="@color/c_999999"
            android:textSize="13sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/sdv_image"
            tools:text="送4000现金财富"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>