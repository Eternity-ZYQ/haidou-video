<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".offline.SelPartnerTypeActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        app:title="商家入驻"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.huige.library.widget.ItemLayout
        android:id="@+id/item_company"
        android:layout_width="match_parent"
        app:itemText="企业账户/个体工商户"
        app:itemTextPaddingLeft="@dimen/dp_15"
        android:background="@drawable/white_ripple"
        android:layout_height="wrap_content"/>

    <com.huige.library.widget.ItemLayout
        android:id="@+id/item_person"
        android:layout_width="match_parent"
        app:itemText="个人微商"
        app:itemTextPaddingLeft="@dimen/dp_15"
        android:background="@drawable/white_ripple"
        android:layout_height="wrap_content"/>
</LinearLayout>