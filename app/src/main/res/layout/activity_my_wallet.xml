<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="我的钱包"/>


    <LinearLayout
        android:id="@+id/moneyLL"
        style="@style/MatchWrap.Vertical"
        android:layout_height="84dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:visibility="gone"
        tools:ignore="RtlHardcoded">

        <LinearLayout style="@style/WrapWrap.Horizontal">

            <TextView
                style="@style/WrapWrap"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/moneyTV"
                style="@style/WrapWrap"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:text="1000"/>

        </LinearLayout>

        <TextView
            style="@style/WrapWrap"
            android:layout_marginTop="6dp"
            android:text="余额"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>


    <com.huige.library.widget.ItemLayout
        android:id="@+id/item_red_packer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        app:itemLineVisible="GONE"
        app:itemText="红包领取"
        android:visibility="gone"
        app:itemTextPaddingLeft="@dimen/dp_15"/>

    <com.huige.library.widget.ItemLayout
        android:id="@+id/item_bankCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        app:itemLineVisible="GONE"
        app:itemText="我的银行卡"
        android:visibility="gone"
        app:itemTextPaddingLeft="@dimen/dp_15"/>

    <TextView
        android:id="@+id/item_settle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:text="我的结算卡"
        android:visibility="gone"
        android:drawableRight="@mipmap/right_arrow"
        android:textColor="@color/c_333333"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"/>

    <TextView
        android:id="@+id/item_bill"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/right_arrow"
        android:textColor="@color/c_333333"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        android:text="我的账单"/>

    <TextView
        android:id="@+id/item_earnings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/right_arrow"
        android:textColor="@color/c_333333"
        android:paddingLeft="@dimen/dp_15"
        android:visibility="gone"
        android:paddingRight="@dimen/dp_20"
        android:text="我的收益"/>

    <TextView
        android:id="@+id/item_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/right_arrow"
        android:textColor="@color/c_333333"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        android:visibility="gone"
        android:text="充值"/>

    <TextView
        android:id="@+id/item_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/white_ripple"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/right_arrow"
        android:textColor="@color/c_333333"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_20"
        android:text="立即提现"/>

</LinearLayout>