<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60">

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:textColor="@color/c_share_money"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="@id/tv_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_share"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="张三怀桂花糕张"/>

    <TextView
        android:id="@+id/tv_member_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/c_share_money"
        android:textSize="12sp"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/tv_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_share"
        app:layout_constraintLeft_toRightOf="@id/tv_member_name"
        app:layout_constraintRight_toLeftOf="@+id/tv_share"
        tools:text="150 0000 0000"/>

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:background="#f3491e"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="得100元"/>

    <View style="@style/lineStyle"
          android:layout_width="0dp"
          app:layout_constraintLeft_toLeftOf="@id/tv_member_name"
          app:layout_constraintRight_toRightOf="@id/tv_share"
          app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>