<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="429dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/sys_message_image_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="TODO" android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/sys_message_close_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="@id/sys_message_image_iv"
        app:layout_constraintTop_toTopOf="@id/sys_message_image_iv"
        android:contentDescription="TODO" android:scaleType="fitXY"
        android:src="@mipmap/icon_close"/>
</android.support.constraint.ConstraintLayout>
