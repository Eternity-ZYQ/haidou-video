<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:background="@color/xj_background"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/tv_log_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="任务"
		android:textSize="16sp"
		android:layout_margin="10dp"
		android:textColor="@color/white"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_acount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="0.00"
		android:textColor="#4675ab"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/tv_acount_limit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0.00"
		android:textSize="12sp"
		android:layout_marginTop="10dp"
		android:textColor="@color/c_999999"
		app:layout_constraintStart_toStartOf="@id/tv_log_name"
		app:layout_constraintTop_toBottomOf="@id/tv_log_name"/>

	<TextView
		android:id="@+id/tv_time"
		android:textSize="12sp"
		android:textColor="@color/c_999999"
		android:text="2020-12-12"
		app:layout_constraintEnd_toEndOf="@id/tv_acount"
		app:layout_constraintTop_toTopOf="@id/tv_acount_limit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<View
		style="@style/lineStyle"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_time"
		android:layout_marginTop="10dp"
		app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>