<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_btn_line">

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:contentDescription="TODO" android:src="@mipmap/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tools:text="张三"
        android:textColor="@color/theme_color"
        app:layout_constraintBottom_toTopOf="@+id/tv_user_mobile"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"/>

    <TextView
        android:id="@+id/tv_user_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tools:text="12313131"
        android:textColor="@color/c_333333"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_extracts"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"/>

    <TextView
        android:id="@+id/tv_user_extracts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tools:text="12313131"
        android:textColor="@color/theme_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintLeft_toRightOf="@id/iv_user_head"
        app:layout_constraintTop_toBottomOf="@id/tv_user_mobile"/>

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_btn_line"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="修改分润"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_del"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_user_head"/>

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_head"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_update"/>

</android.support.constraint.ConstraintLayout>