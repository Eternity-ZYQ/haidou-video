<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xj_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_30"
        android:contentDescription="TODO" android:padding="@dimen/dp_10"
        android:tint="@color/white"
        android:src="@mipmap/icon_close"/>


    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="修改支付密码"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_dialog_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="请输入登录密码"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <com.noober.background.view.BLEditText
        android:id="@+id/loginEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:hint="请输入登录密码"
        android:textSize="@dimen/sp_14"
        app:bl_stroke_color="@color/black"
        app:bl_stroke_width="@dimen/dp_1"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/white"/>

    <com.yimeng.widget.PwdEditText
        android:id="@+id/pwdEt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:inputType="number"
        app:pwdet_rect_color="@color/white"
        app:pwdet_line_color="@color/white"
        app:pwdet_rect_corner="@dimen/dp_5"/>

    <com.noober.background.view.BLButton
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="0dp"
        android:text="确定"
        android:textColor="@color/white"
        android:visibility="gone"
        app:bl_corners_radius="@dimen/dp_5"
        app:bl_shape="rectangle"
        app:bl_solid_color="@color/xj_btn_bg"
        tools:visibility="visible"/>

</LinearLayout>