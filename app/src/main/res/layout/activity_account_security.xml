<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xj_background"
    tools:context=".mine.AccountSecurityActivity">

    <com.yimeng.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xj_background"
        app:titleTextColor="@color/white"
        app:leftIcon="@mipmap/icon_left_white"
        app:title="账户安全"/>

    <com.huige.library.widget.ItemLayout
        android:id="@+id/item_update_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xj_btn_bg"
        app:itemRightTextColor="@color/white"
        app:itemLineVisible="GONE"
        app:itemText="修改手机号码"
        app:itemTextColor="@color/white"
        app:itemTextPaddingLeft="@dimen/dp_15"/>


    <TextView
        android:id="@+id/tv_update_pwd"
        android:layout_width="match_parent"
        android:background="@color/xj_btn_bg"
        android:text="修改登录密码"
        android:drawableRight="@mipmap/right_arrow"
        android:paddingRight="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_1"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_40"/>


    <TextView
        android:id="@+id/tv_update_pay_pwd"
        android:layout_width="match_parent"
        android:background="@color/xj_btn_bg"
        android:text="修改支付密码"
        android:layout_marginTop="@dimen/dp_1"
        android:drawableRight="@mipmap/right_arrow"
        android:paddingRight="@dimen/dp_25"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_40"/>
</LinearLayout>