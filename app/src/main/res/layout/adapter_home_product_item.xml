<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:background="@drawable/shape_home_product_bg"
    android:layout_margin="@dimen/dp_5">

    <ImageView
        android:id="@+id/iv_product_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:adjustViewBounds="true"
        android:contentDescription="TODO" android:scaleType="centerCrop"
        android:src="@color/c_cccccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        tools:text="iPhone XS 256G 来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个来一个"
        android:textSize="14sp"
        android:lines="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_product_logo"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        tools:text="¥2000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        android:textColor="@color/theme_color"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_product_pay"
        android:layout_width="wrap_content"
        tools:text="2560人付款"
        android:textSize="11sp"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/tv_product_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_price"
        app:layout_constraintTop_toTopOf="@id/tv_product_price"
        android:textColor="@color/c_999999"
        app:layout_goneMarginBottom="@dimen/dp_10"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_product_gift"
        android:layout_width="wrap_content"
        tools:text="送4000现金财富"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_product_price"
        android:textColor="@color/c_999999"
        android:layout_marginBottom="@dimen/dp_5"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>