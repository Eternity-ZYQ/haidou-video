<?xml version="1.0" encoding="utf-8"?>
<com.noober.background.view.BLLinearLayout android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	app:bl_corners_radius="20dp"
	android:gravity="center_horizontal"
	app:bl_solid_color="@color/white"
	android:layout_height="wrap_content"
	android:paddingBottom="20dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:textColor="@color/c_333333"
		android:textSize="16sp"
		android:text="激活账号"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="@dimen/dp_45"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/dp_15"
		android:layout_gravity="center_horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center"
			android:layout_gravity="center_horizontal"
			android:text="¥"
			android:textColor="@color/c_333333"
			android:textSize="18sp"
			android:textStyle="bold"/>

		<EditText
			android:id="@+id/et_amt"
			android:layout_width="100dp"
			android:hint="请输入金额"
			android:gravity="center"
			android:textSize="18sp"
			android:textColor="@color/c_333333"
			android:inputType="numberDecimal"
			android:layout_height="wrap_content"/>

	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_15"
		android:layout_marginStart="30dp"
		android:text="支付方式"
		android:layout_gravity="start"
		android:textColor="@color/c_333333"
		android:textSize="14sp"/>


	<LinearLayout
		android:id="@+id/layout_alipay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dp_10"
		android:layout_marginStart="30dp"
		android:layout_marginEnd="30dp"
		android:gravity="center_vertical"
		android:orientation="horizontal">

		<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@mipmap/alipay_icon"
			android:drawablePadding="@dimen/dp_10"
			android:gravity="center_vertical"
			android:text="支付宝支付"
			android:textColor="@color/c_333333"
			android:textSize="14sp"/>

		<ImageView
			android:id="@+id/iv_alipay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="@dimen/dp_15"
			android:contentDescription="TODO" android:src="@mipmap/select_circle"/>

	</LinearLayout>

	<com.noober.background.view.BLButton
		android:id="@+id/btn"
		app:bl_solid_color="@color/theme_color"
		android:textColor="@color/white"
		android:layout_marginTop="30dp"
		android:text="激活"
		app:bl_corners_radius="20dp"
		android:padding="0dp"
		android:layout_width="200dp"
		android:layout_height="35dp"/>

</com.noober.background.view.BLLinearLayout>