<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:button="@null"
        android:background="@drawable/select_check_bg"/>

    <ImageView
        android:id="@+id/sdv_product"
        app:layout_constraintLeft_toRightOf="@id/cb_check"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/dp_15"
        android:layout_width="@dimen/dp_60"
        android:contentDescription="TODO" android:src="@color/c_cccccc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/dp_60"/>


    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_15"
        tools:text="vivo x21vivo x21vivo vivo x21vivo x21vivo x21vivo x21vivo x21vivo x21 x21vivo x21vivo x21vivo x21"
        app:layout_constraintLeft_toRightOf="@id/sdv_product"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toTopOf="@id/sdv_product"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Â¥ 555"
        app:layout_constraintLeft_toRightOf="@id/sdv_product"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/color_textcolor_red"
        app:layout_constraintBottom_toBottomOf="@id/sdv_product"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_product_num"
        android:layout_width="wrap_content"
        tools:text="x1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sdv_product"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content"/>

    <View style="@style/lineStyle"/>
</android.support.constraint.ConstraintLayout>