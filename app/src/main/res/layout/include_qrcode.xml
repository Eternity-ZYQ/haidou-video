<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/xj_btn_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.huige.library.widget.CircleImageView
            android:id="@+id/logoSDV"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@color/c_cccccc"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="雷布斯雷布斯雷布雷布斯斯雷布"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="总收益"
                android:visibility="gone"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="TODO" android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ico_line"/>

    <TextView
        android:id="@+id/tv_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:textSize="14sp"/>

    <FrameLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="140dp"
            android:contentDescription="TODO" android:src="@drawable/shape_white_radius_10"
            android:layout_gravity="center"
            android:layout_height="140dp"/>
        <ImageView
            android:id="@+id/qrcodeSDV"
            android:contentDescription="TODO" tools:src="@color/c_cccccc"
            android:layout_width="160dp"
            android:layout_gravity="center"
            android:layout_height="160dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="TODO" android:src="@mipmap/xj_logo"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_inviteCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:text="扫码下载促销王APP，零门槛，零投资，电商运营大咖教授营销方法，美女客服带你每日做任务赚现金，0经验也可以加入免费开店，包教包会；免费开店，厂家一件代发，无需囤货，百万货源任你挑选，轻松月入2万。"/>


</LinearLayout>