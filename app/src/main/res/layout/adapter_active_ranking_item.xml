<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_ranking"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:gravity="center"
            android:textColor="@color/c_333333"
            android:textSize="14sp"
            tools:text="排行"/>

        <com.huige.library.widget.CircleImageView
            android:id="@+id/civ_user_head"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@color/c_cccccc"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_member_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:visibility="gone"
                android:textColor="@color/c_333333"
                android:textSize="12sp"
                tools:text="店铺名："/>

            <TextView
                android:id="@+id/tv_member_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:visibility="gone"
                android:textColor="@color/c_333333"
                android:textSize="12sp"
                tools:text="缺单数："/>

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/c_333333"
                android:textSize="12sp"
                tools:text="昵称："/>

            <TextView
                android:id="@+id/tv_member_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:visibility="gone"
                android:textColor="@color/c_333333"
                android:textSize="12sp"
                tools:text="手机号："/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_send_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:contentDescription="TODO" android:padding="@dimen/dp_5"
            android:visibility="gone"
            android:src="@mipmap/icon_task_to"/>

        <TextView
            android:id="@+id/tv_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/c_333333"
            android:textSize="14sp"
            tools:text="活跃度"/>

    </LinearLayout>

    <View
        style="@style/lineStyle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>