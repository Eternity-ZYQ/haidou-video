<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/theme_color"/>
            <solid android:color="@color/white"/>
            <padding android:bottom="@dimen/dp_5"
                     android:left="@dimen/dp_15"
                     android:right="@dimen/dp_15"
                     android:top="@dimen/dp_5"/>
            <corners android:radius="@dimen/dp_20"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/dp_1" android:color="@color/c_cccccc"/>
            <solid android:color="@color/white"/>
            <padding android:bottom="@dimen/dp_5"
                     android:left="@dimen/dp_15"
                     android:right="@dimen/dp_15"
                     android:top="@dimen/dp_5"/>
            <corners android:radius="@dimen/dp_20"/>
        </shape>
    </item>
</selector>